<Window x:Class="MSCLInstaller.Advanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSCLInstaller"
        mc:Ignorable="d"
        Title="Advanced Options" Height="200" Width="200" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <GroupBox Header="Mod Debbugging">
            <StackPanel>
                <TextBlock Width="Auto">
                    <Hyperlink NavigateUri="" RequestNavigate="Hyperlink_RequestNavigate">Click here to read more info about Debugging!</Hyperlink>
                </TextBlock>
                <TextBlock Name="DebugStatus" Width="Auto" />
                <Button Name="DebugButton" Width="Auto" Content="Enable Debugging" IsEnabled="False" Click="DebugButton_Click" />
                <Button Name="CopyDebugButton" Width="Auto" Content="Copy Debug Files" IsEnabled="False" Click="CopyDebugButton_Click" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
